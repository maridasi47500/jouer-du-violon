<%= form_with(model: @post, url: post_path(@post), local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :measure %>
        <%= number_field_tag 'measure', nil, style: "font-size: 24px;" %>

  </div>

  <div class="field">
    <%= form.label :nuances %>
    <% @nuances.each do |nuance| %>
      <%= check_box_tag 'nuance_ids[]', nuance.id, @post.nuance_ids.include?(nuance.id) %>
      <%= nuance.name %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit 'Save Post and Create Cards' %>
  </div>
<% end %>

